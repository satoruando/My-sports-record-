<div class="container">

  <div class="row">
    <div class="col-3 mb-5">
      <h5 class="text-center bg-primary text-light mt-5">会員一覧</h5>
   </div>
 </div>

  <div class="row">
    <div class="col-12 mb-5">
      <table class="table">
          <thead>
              <tr class="bg-info">
                  <th>会員ID</th>
                  <th>氏名</th>
                  <th>メールアドレス</th>
                  <th>ステータス</th>
              </tr>
          </thead>
          <tbody>
            <% @members.each do |member| %>
              <tr class="bg-light">
                  <td><%= member.id %></td>
                  <td>
                    <%= link_to admin_customer_path(member), class: "text-dark", style: "text-decoration: underline;" do %>
                     <%= member.last_name %><%= member.first_name %>
                    <% end %>
                  </td>
                  <td><%= member.email %></td>
                  <td>
                    <%if member.is_deleted == false %>
                      <span class="text-success font-weight-bold">有効</span>
                    <% else %>
                     <span class="text-secondary font-weight-bold">退会済</span>
                    <% end %>
                  </td>
              </tr>
            <% end %>
          </tbody>
      </table>
      <div><%= paginate @members %></div>
    </div>
  </div>

</div>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <h1 class="h3 mb-3 fw-normal">Log-in</h1>

    <!--メールアドレス-->
    <div class="row form-group">
      <%= f.label :email, "メールアドレス", class: "col-md-4 col-form-label" %>
      <%= f.email_field :email, autofocus: true, :placeholder => "sample@example.com", class: "form-control col-md-4" %>
    </div>

    <!--パスワード-->
    <div class="row form-group mt-3">
      <%= f.label :password, "パスワード", class: "col-md-4 col-form-label" %>
      <%= f.password_field :password, autocomplete: "off", class: "form-control col-md-4" %>
    </div>

    <!--ボタン-->
    <div class="actions mx-auto">
      <%= f.submit "ログイン", class: 'btn btn-sm btn-primary col-md-1'%>
    </div>

  <% end %>

  <!--バリデーション-->
  <% if @video.errors.any? %>
    <%= @video.errors.count %>件のエラーが発生しました
    <ul>
      <% @video.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>

 <div class="video-container">
  <div class="row">
    <div class="col-md-5 col-sm-10 mx-2 mx-sm-auto text-center px-0 my-5">
        <h5 class="text-dark p-4 mb-0">Video form</h5>
          <div class="form-body p-4">
            <%= form_with model: @video, local: true do |form| %>
            <div class="p-2">
              <h5>Video</h5>
              <p>※mp4での投稿でよろしくお願い致します。</p>
                <!--投稿フォーム-->
                <%= form.file_field :video %>
            </div>
            <div class="p-2">
              <h5>Thumbnail</h5>
              <p>※動作スピード向上のため、サムネイルの協力をお願い致します。</p>
                <!--サムネ投稿フォーム-->
                <%= form.file_field :image %>
            </div>
            <div class="p-2">
              <!--タイトル-->
              <%= form.text_field :title, autofocus: true, :placeholder => "title" %> <br>
            </div>
            <div class="p-2">
              <!--説明-->
              <%= form.text_area :explanation, autofocus: true, :placeholder => "explanation" %>
            </div>
            <div class="p-2">
              <h5>genre</h5>
                <!--ジャンル-->
                <%= form.select :genre_id, @genres.map{ |g| [g.genre_name, g.id]} %> <br>
            </div>
            <div class="p-2">
              <!--ボタン-->
              <%= form.submit "Completion", class: 'btn btn-sm btn-success col-md-6' %>
            </div>
            <% end %>
          </div>
    </div>
  </div>
</div>